
# Jenkinsfile for TODO-APP
pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the Git repository
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("todo-app:latest")
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy Application') {
            steps {
                sh 'docker run -d -p 3000:3000 todo-app:latest'
            }
        }
    }
}